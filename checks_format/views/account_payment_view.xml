<?xml version="1.0"?>
<odoo>

    <record id="account_payment_view_form" model="ir.ui.view">
        <field name="name">Account Payment Form</field>
        <field name="model">account.payment</field>
        <field name="inherit_id" ref="account.view_account_payment_form"/>
        <field name="arch" type="xml">
            <xpath expr="//header" position="inside">
                <button name="%(checks_format_report)d" string="IMPRIMIR CHEQUE" type="action" class="oe_highlight"
                        attrs="{'invisible': ['|', '|', ('payment_method_code', '!=', 'check_format'), ('state', '!=', 'posted'), ('is_move_sent', '=', True)]}"/>
            </xpath>
        </field>
    </record>

</odoo>