<?xml version="1.0"?>
<odoo>

    <record id="Checks_format_view_form" model="ir.ui.view">
        <field name="name">Checks Format Form</field>
        <field name="model">checks.format</field>
        <field name="arch" type="xml">
            <form string="Formatos de cheques">
                <sheet>
                    <div class="oe_title">
                        <h1 class="mt0">
                            <field name="name"/>
                        </h1>
                    </div>
                    <group>
                        <group string="Fecha">
                            <field name="date"/>
                            <field name="date_mtop"/>
                            <field name="date_mleft"/>
                            <field name="date_lspaccing"/>
                        </group>
                    </group>
                </sheet>
            </form>
        </field>
    </record>
    <record id="Checks_format_view_tree" model="ir.ui.view">
        <field name="name">Checks Format Tree</field>
        <field name="model">checks.format</field>
        <field name="arch" type="xml">
            <tree string="Formatos de cheques">
                <field name="date"/>
            </tree>
        </field>
    </record>

    <record id="checks_format_view_search" model="ir.ui.view">
        <field name="name">Checks Format Search</field>
        <field name="model">checks.format</field>
        <field name="arch" type="xml">
            <search string="Entradas">
                <field name="date"/>
            </search>
        </field>
    </record>
    <record id="checks_format_model_action" model="ir.actions.act_window">
        <field name="name">Formatos de cheques</field>
        <field name="res_model">checks.format</field>
        <field name="view_mode">tree,form</field>
    </record>
    <menuitem name="Formato de cheques" id="base_menu"/>
    <menuitem name="Setting" sequence="99" id="configuration"
              parent="base_menu"/>
    <menuitem name="Formatos" id="checks_format_menu"
              parent="base_menu" sequence="1" action="checks_format_model_action"/>
</odoo>
