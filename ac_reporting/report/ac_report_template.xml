<?xml version="1.0" encoding="UTF-8"?>
<odoo>
    <!--Template-->
    <template id="ac_report_template">
        <t t-call="web.html_container">
            <t t-foreach="docs" t-as="doc">
                <t t-call="web.external_layout">
                    <div class="page">
                        <div>
                            <h2 class="float-left" style="font-size:23px">
                                <span t-field="doc.name" class="ml-1"/>
                            </h2>
                        </div>
                        <div class="row mt-4">
                            <div class="col-12">
                                <strong>Fecha contable:</strong><span t-field="doc.date" class="ml-1"/>
                            </div>
                        </div>
                        <div class="row mt-4">
                            <div class="col-6">
                                <div>
                                    <strong>Referencia:</strong><span t-field="doc.ref" class="ml-1"/>
                                </div>
                                <div>
                                    <strong>Diario:</strong><span t-field="doc.journal_id.name" class="ml-1"/>
                                </div>
                            </div>
                        </div>
                        <div>
                            <table class="table mt-5">
                                <thead>
                                    <tr>
                                        <th scope="col">CUENTA</th>
                                        <th scope="col">ETIQUETA</th>
                                        <th scope="col">CRÉDITO</th>
                                        <th scope="col">DÉBITO</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    <t t-foreach="doc.line_ids" t-as="line">
                                        <tr>
                                            <td>
                                                <span t-field="line.account_id.name"/>
                                            </td>
                                            <td>
                                                <span t-field="line.name"/>
                                            </td>
                                            <td>
                                                <span t-field="line.debit"/>
                                            </td>
                                            <td>
                                                <span t-field="line.credit"/>
                                            </td>

                                        </tr>
                                    </t>
                                </tbody>
                            </table>
                        </div>
                    </div>
                </t>
            </t>
        </t>
    </template>
</odoo>