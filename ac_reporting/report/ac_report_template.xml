<?xml version="1.0" encoding="UTF-8"?>
<odoo>
    <!--Template-->
    <template id="ac_report_template">
        <t t-call="web.html_container">
            <t t-foreach="docs" t-as="doc">
                <t t-call="web.external_layout">
                    <div class="page">
                        <div>
                            <h2 class="float-left" style="font-size:30px">
                                <span t-field="doc.name"/>
                            </h2>
                        </div>
                        <div class="row mt-4">
                            <div class="col-12">
                                <strong>Fecha contable:</strong><span t-field="doc.date" class="ml-1"/>
                            </div>
                        </div>
                        <div class="row mt-4">
                            <div class="col-6">
                                <div t-if="doc.partner_id.name">
                                    <strong>Cliente/Proveedor:</strong><span t-field="doc.partner_id.name"
                                                                             class="ml-1"/>
                                </div>
                                <div t-if="doc.journal_id">
                                    <strong>Diario:</strong><span t-field="doc.journal_id.name" class="ml-1"/>
                                </div>
                                <div t-if="doc.currency_id">
                                    <strong>Moneda:</strong><span t-field="doc.currency_id.name" class="ml-1"/>
                                </div>
                                <div t-if="doc.ref">
                                    <strong>Referencia:</strong><span t-field="doc.ref" class="ml-1"/>
                                </div>
                                <div t-if="doc.payment_reference">
                                    <strong>Referencia de pago:</strong><span t-field="doc.payment_reference" class="ml-1"/>
                                </div>
                            </div>
                            <div class="col-6">
                                <div t-if="doc.l10n_mx_edi_payment_method_id and doc.l10n_mx_edi_cfdi_request">
                                    <strong>Forma de pago:</strong><span
                                        t-field="doc.l10n_mx_edi_payment_method_id.name" class="ml-1"/>
                                </div>
                                <div t-if="doc.l10n_mx_edi_payment_policy and doc.l10n_mx_edi_cfdi_request">
                                    <strong>Política de pago:</strong><span t-field="doc.l10n_mx_edi_payment_policy"
                                                                            class="ml-1"/>
                                </div>
                                <div t-if="doc.l10n_mx_edi_usage and doc.l10n_mx_edi_cfdi_request">
                                    <strong>Uso:</strong><span t-field="doc.l10n_mx_edi_usage" class="ml-1"/>
                                </div>
                                <div t-if="doc.l10n_mx_edi_cfdi_uuid and doc.l10n_mx_edi_cfdi_request">
                                    <strong>Folio Fiscal:</strong><span t-field="doc.l10n_mx_edi_cfdi_uuid"
                                                                        class="ml-1"/>
                                </div>
                            </div>
                        </div>
                        <div>
                            <table class="table mt-5">
                                <thead>
                                    <tr>
                                        <th scope="col">CUENTA</th>
                                        <th scope="col">ETIQUETA</th>
                                        <th scope="col">CRÉDITO</th>
                                        <th scope="col">DÉBITO</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    <t t-foreach="doc.line_ids" t-as="line">
                                        <tr>
                                            <td>
                                                <span t-field="line.account_id.display_name"/>
                                            </td>
                                            <td>
                                                <span t-field="line.name"/>
                                            </td>
                                            <td>
                                                <span t-field="line.debit"/>
                                            </td>
                                            <td>
                                                <span t-field="line.credit"/>
                                            </td>

                                        </tr>
                                    </t>
                                    <tr>
                                        <td></td>
                                        <td></td>
                                        <td>
                                            <t t-set="dig" t-value="env.ref('product.decimal_product_uom').digits"/>
                                            <strong class="font-weight-bold" t-esc="sum(doc.line_ids.mapped('debit'))"
                                                    t-options='{"widget": "float", "precision": dig}'/>
                                        </td>
                                        <td>
                                            <t t-set="dig" t-value="env.ref('product.decimal_product_uom').digits"/>
                                            <strong class="font-weight-bold" t-esc="sum(doc.line_ids.mapped('debit'))"
                                                    t-options='{"widget": "float", "precision": dig}'/>
                                        </td>
                                    </tr>
                                </tbody>
                            </table>
                        </div>
                    </div>
                </t>
            </t>
        </t>
    </template>
</odoo>