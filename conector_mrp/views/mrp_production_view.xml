<?xml version="1.0"?>
<odoo>
    <record id="mrp_production_view_form_inherit_lob" model="ir.ui.view">
        <field name="name">mrp.production.form</field>
        <field name="model">mrp.production</field>
        <field name="inherit_id" ref="mrp.mrp_production_form_view"/>
        <field name="arch" type="xml">
            <xpath expr="//page[@name='components']/field[@name='move_raw_ids']/tree/field[@name='quantity_done']"
                   position="after">
                <field name="percentage_error" optional="hide"/>
                <field name="weight_error" optional="hide"/>
            </xpath>
            <xpath expr="//group[1]/group[1]/field[last()]" position="after">
                <field name="asys"/>
            </xpath>
            <xpath expr="//group[1]/group[2]/field[last()]" position="after">
                    <field name="asys_state" attrs="{'invisible':[('asys','=',False)]}"/>
                    <field name="asys_error" attrs="{'invisible':[('asys','=',False)]}"/>
            </xpath>
            <xpath expr="//header">
                <button name="enviar" string="Enviar a Asys" type="object"
                        attrs="{'invisible':['|','|',('asys','=',False),('reservation_state','!=', 'assigned'),('asys_state', '=', 'send')]}"
                        class="oe_highlight"/>
            </xpath>
        </field>
    </record>
</odoo>
