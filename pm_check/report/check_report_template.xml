<?xml version="1.0" encoding="UTF-8"?>
<odoo>
    <!--Template-->
    <template id="check_report_template">
        <t t-call="web.basic_layout">
            <t t-foreach="docs" t-as="doc">
                <div class="page">
                    <link href="/pm_check/static/src/css/style.css" rel="stylesheet" type="text/css"/>
                    <t t-set="currency_t" t-value="'M.E.'"/>
                    <t t-if="doc.currency_id == env.company.currency_id">
                        <t t-set="currency_t" t-value="'M.N'"/>
                    </t>
                    <t t-elif="doc.currency_id.name=='USD'">
                        <t t-set="currency_t" t-value="'DLLS'"/>
                    </t>

                    <t t-set="word"
                       t-value="'--(' + doc.currency_id.amount_to_text2(doc.amount).upper() + ' ' + currency_t + ')--'"/>

                    <!--Templates cheques-->
                    <t t-if="doc.journal_id.check_type">
                        <t t-if="doc.journal_id.check_type=='bm'">
                            <t t-call="pm_check.banamex_template"/>
                        </t>
                        <t t-elif="doc.journal_id.check_type=='bc'">
                            <t t-call="pm_check.bancomer_template"/>
                        </t>
                        <t t-elif="doc.journal_id.check_type=='hs'">
                            <t t-call="pm_check.hsbc_template"/>
                        </t>
                    </t>
                </div>
            </t>
        </t>
    </template>
</odoo>