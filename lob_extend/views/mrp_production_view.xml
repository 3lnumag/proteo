<?xml version="1.0"?>
<odoo>
    <record id="mrp_production_view_form_inherit_lob" model="ir.ui.view">
        <field name="name">mrp.production.form</field>
        <field name="model">mrp.production</field>
        <field name="inherit_id" ref="mrp.mrp_production_form_view"/>
        <field name="arch" type="xml">
            <xpath expr="//page[@name='components']/field[@name='move_raw_ids']/tree/field[@name='quantity_done']" position="after">
                <field name="percentage_error" optional="hide"/>
                <field name="weight_error" optional="hide"/>
            </xpath>
        </field>
    </record>
</odoo>
