<?xml version="1.0"?>
<odoo>
    <record id="lobextend_reporting_view_tree" model="ir.ui.view">
        <field name="name">lobextend.reporting.tree</field>
        <field name="model">lobextend.reporting</field>
        <field name="arch" type="xml">
            <tree>
                <field name="currency_id" invisible="1"/>
                <field name="name"/>
                <field name="invoice_origin"/>
                <field name="invoide_date"/>
                <field name="categ_id"/>
                <field name="serie"/>
                <field name="folio"/>
                <field name="partner_id"/>
                <field name="amount_untaxed"/>
                <field name="amount_tax"/>
                <field name="amount_total" sum="Suma del total"/>
                <field name="amount_residual" sum="Suma del adeudo"/>
                <field name="state"/>
            </tree>
        </field>
    </record>
    <record id="lobextend_reporting_view_graph" model="ir.ui.view">
        <field name="name">lobextend.reporting.graph</field>
        <field name="model">lobextend.reporting</field>
        <field name="arch" type="xml">
            <graph type="bar">
                <field name="invoide_date"/>
                <field name="categ_id"/>
            </graph>
        </field>
    </record>
    <record id="lobextend_reporting_view_pivot" model="ir.ui.view">
        <field name="name">Scale Reporting Pivot</field>
        <field name="model">lobextend.reporting</field>
        <field name="arch" type="xml">
            <pivot>
                <field name="invoide_date" type="row"/>
                <field name="categ_id" type="col"/>
            </pivot>
        </field>
    </record>
    <record id="lobextend_reporting_view_search" model="ir.ui.view">
        <field name="name">lobextend.reporting.search</field>
        <field name="model">lobextend.reporting</field>
        <field name="arch" type="xml">
            <search>
                <field name="name"/>
                <separator/>
                <filter name="posted" string="Publicados" domain="[('state', '=', 'posted')]"/>
                <filter name="cancel" string="Cancelados" domain="[('state', '=', 'cancel')]"/>
                <filter name="draft" string="Borrador" domain="[('state', '=', 'draft')]"/>
                <separator/>
                <filter name="adeudo" string="Con adeudo" domain="[('amount_residual', '&gt;', '0.0')]"/>
                <filter name="sin_adeudo" string="Sin adeudo" domain="[('amount_residual', '&lt;=', '0.0')]"/>
                <group expand="0" string="Group By">
                    <filter string="Estado" name="state"
                            context="{'group_by':'state'}"/>
                    <filter string="Serie" name="serie"
                            context="{'group_by':'serie'}"/>
                    <filter string="RazÃ³n social" name="rsocial"
                            context="{'group_by':'partner_id'}"/>
                    <filter string="Referencia" name="referencia"
                            context="{'group_by':'categ_id'}"/>
                </group>
            </search>
        </field>
    </record>
    <record id="lobextend_reporting_model_action" model="ir.actions.act_window">
        <field name="name">Reporte pendientes de pago</field>
        <field name="res_model">lobextend.reporting</field>
        <field name="view_mode">tree,graph,pivot</field>
    </record>

    <menuitem name="Pendientes de pago" id="lobextend_reporting_menu"
              parent="account.menu_finance_reports" action="lobextend_reporting_model_action"/>
</odoo>
