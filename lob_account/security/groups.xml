<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data noupdate="1">
        <!--Record rules-->
        <record model="ir.rule" id="group_lob_rule_account_move">
            <field name="name">ws lob account_move</field>
            <field name="model_id" ref="model_account_move"/>
            <field name="groups" eval="[(4, ref('lob.group_lob'))]"/>
            <field name="domain_force">['|', ('business_line_id', 'in', user.business_line_ids.mapped('id')),
                                        ('business_line_id', '=', False)]</field>
            <field name="perm_read" eval="True"/>
            <field name="perm_write" eval="True"/>
            <field name="perm_create" eval="True"/>
            <field name="perm_unlink" eval="True"/>
        </record>
        <record model="ir.rule" id="group_lob_rule_payment_reporting">
            <field name="name">ws payment_reporting</field>
            <field name="model_id" ref="model_payment_reporting"/>
            <field name="groups" eval="[(4, ref('lob.group_lob'))]"/>
            <field name="domain_force">['|', ('business_line_id', 'in', user.business_line_ids.mapped('id')),
                                        ('business_line_id', '=', False)]</field>
            <field name="perm_read" eval="True"/>
            <field name="perm_write" eval="True"/>
            <field name="perm_create" eval="True"/>
            <field name="perm_unlink" eval="True"/>
        </record>
    </data>
</odoo>
